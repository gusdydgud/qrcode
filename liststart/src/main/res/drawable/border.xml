<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 외곽선 색상 및 너비 설정 -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- 회색 테두리 -->

    <!-- 배경색을 흰색으로 설정 -->
    <solid android:color="#FFFFFF" />

    <!-- 모서리 둥글게 처리 -->
    <corners android:radius="4dp" />

    <!-- 내부 패딩 설정 -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
