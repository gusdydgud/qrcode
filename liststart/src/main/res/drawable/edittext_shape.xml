<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 포커스가 있을 때 밑줄 -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- 투명 배경 -->
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- 포커스 상태의 밑줄 색상 -->

        </shape>
    </item>

    <!-- 포커스가 없을 때 밑줄 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- 투명 배경 -->
            <stroke
                android:width="1dp"
                android:color="@color/white" /> <!-- 비포커스 상태의 밑줄 색상 -->

        </shape>
    </item>
</selector>
