<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TabHost 설정 -->
    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Model 지정 탭 -->
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="모델 지정"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingBottom="4dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center"/>


                    <!-- 모델 선택 Spinner -->
                    <Spinner
                        android:id="@+id/spinner_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        />

                    <!--                        android:background="@drawable/border"-->
                    <!-- Border 추가 -->

                    <!-- 선택된 모델 이미지 -->
                    <ImageView
                        android:id="@+id/model_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp" />

                    <!-- 방향 각도 레이아웃 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="방향 각도"
                            android:textStyle="bold"
                            android:gravity="start" />

                        <EditText
                            android:id="@+id/edit_angle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:inputType="number"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 좌표 지정 탭 -->
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 위도 경도 입력란 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="위도"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:paddingStart="16dp"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/edit_latitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="경도"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:paddingStart="16dp"
                            android:paddingBottom="8dp" />

                        <EditText
                            android:id="@+id/edit_longitude"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D3D3D3"
                        android:layout_marginVertical="16dp" />

                    <!-- 도분초 및 방향 입력란 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Degrees"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingStart="16dp" />

                        <EditText
                            android:id="@+id/degrees_lat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />

                        <EditText
                            android:id="@+id/degrees_long"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Minutes"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingStart="16dp" />

                        <EditText
                            android:id="@+id/minutes_lat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />

                        <EditText
                            android:id="@+id/minutes_long"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Seconds"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingStart="16dp" />

                        <EditText
                            android:id="@+id/seconds_lat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />

                        <EditText
                            android:id="@+id/seconds_long"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:hint=""
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Directions"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingStart="16dp" />

                        <!-- 위도 방향 Spinner -->
                        <Spinner
                            android:id="@+id/direction_lat_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:gravity="center" />

                        <!-- 경도 방향 Spinner -->
                        <Spinner
                            android:id="@+id/direction_long_spinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:padding="8dp"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <!-- 저장하기 및 삭제하기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="저장하기"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:text="삭제하기"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>